 <h1>Editar Carro</h1>

  <%= form_for :car, :html => {:class => "formBorder"}, url: car_path(@car), method: :PATCH do |f|%>
 <% if @car.errors.any? %>
      <div id="error_explanation">
          <% @car.errors.full_messages.each do |msg| %>
          <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Error!</strong> <%= msg %>.
          </div>

          <% end %>

      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :marca%></br>
      <%= f.text_field :marca, :class => 'form-control' %>
    </div>

    <div class="form-group">
         <%= f.label :modelo %></br>
         <%= f.text_field :modelo, :class => 'form-control' %>
    </div>

    <div class="form-group">
             <%= f.label :latitud %></br>
             <%= f.text_field :lat, :class => 'form-control' %>
        </div>

        <div class="form-group">
                 <%= f.label :longitud %></br>
                 <%= f.text_field :long, :class => 'form-control' %>
            </div>

    <p>
      <%= f.submit  'Guardar Cambios', :class => 'btn btn-success' %>
    </p>
  <% end %>
 </br>
  <%= link_to 'Volver', cars_path %>