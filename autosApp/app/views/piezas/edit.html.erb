 <h1>Editar Pieza</h1>


 <%= form_for :pieza, :html => {:class => "formBorder"}, url: car_pieza_path(@pieza.car,@pieza), method: :PATCH do |f|%>
 <% if @pieza.errors.any? %>
      <div id="error_explanation">
          <% @car.errors.full_messages.each do |msg| %>
          <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Error!</strong> <%= msg %>.
          </div>

          <% end %>

      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :nombre%></br>
      <%= f.text_field :nombre, :class => 'form-control' %>
    </div>
    <div class="form-group">
         <%= f.label :cantidad%></br>
         <%= f.text_field :cantidad, :class => 'form-control' %>
       </div>
    <p>
        <%= f.submit  'Guardar Cambios', :class => 'btn btn-success' %>
      </p>
 <% end %>
  <%= link_to 'Volver', car_path(@car) %>